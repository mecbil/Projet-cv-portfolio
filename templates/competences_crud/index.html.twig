{% extends 'base.html.twig' %}

{% block title %}Competences index{% endblock %}

{% block body %}
    <h1>Competences index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Image</th>
                <th>Color</th>
                <th>Taux</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for competence in competences %}
            <tr>
                <td>{{ competence.id }}</td>
                <td>{{ competence.title }}</td>
                <td>{{ competence.image }}</td>
                <td>{{ competence.color }}</td>
                <td>{{ competence.taux }}</td>
                <td>
                    <a href="{{ path('app_competences_crud_show', {'id': competence.id}) }}">show</a>
                    <a href="{{ path('app_competences_crud_edit', {'id': competence.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_competences_crud_new') }}">Create new</a>
{% endblock %}
