{% extends 'base.html.twig' %}

{% block title %}Education{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="css/styles.css" type="text/css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
        <link rel="stylesheet" href="css/styleseduc.css">
    {{ encore_entry_link_tags('app') }}
{% endblock %}
 
{% block body %}
    <section class="container text-center">
        <button class="btn btn-block btn-primary mt-1">
            <h1>Education : Quelques dipl√¥mes et attestations Obtenus</h1>
        </button>
        <div class="row mr-0">
            <div class="col">
                {% for education in educations %}
                
                    <div class="card-wrapper {{education.direction}} ml-0">
                        <div class="card">
                            <div class="front {{education.color}}">{{education.title}}</div>
                            <div class="back">{{education.duree}}<br>{{education.content}}</div>
                        </div>
                    </div>
                
                {% endfor %}
            </div>

        <div>
        
    </section>
    <ul class="pagination m-2">
        <li class="page-item {{ ( page == 1 ) ? 'disabled' : ''}}">
            <a class="page-link" href="{{ ( page > 1 ) ? '?page=' ~ (page - 1) : ''}}">&laquo;</a>
        </li>
        {% set pages = (total / limit ) | round(0, 'ceil') %}
        {% for item in 1..pages %}
            <li class="page-item {{ ( page == item ) ? 'active' : ''}}">
                <a class="page-link" href="?page={{ item }}">{{ item }}<a>
            </li>
        {% endfor %}
        <li class="page-item {{ ( page == pages ) ? 'disabled' : ''}}">
            <a class="page-link" href="{{ ( page < pages ) ? '?page=' ~ (page + 1) : ''}}">&raquo;</a>
        </li>
    </ul>
{% endblock %}
